[Unit]
Description=Actn.io %p %i service discovery

# Requirements
Requires=etcd.service
Requires=docker.service
Requires=core-backend@%i.service

# Dependency ordering and binding
After=etcd.service
After=docker.service
After=core-backend@%i.service
BindsTo=core-backend@%i.service
#Before=%p-notify@%i.service


[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do etcdctl set /apps/devos/apis/core/backend/%i $(docker port $(docker ps | grep core-backend-%i | awk '{print $1}') 9000) --ttl 30; sleep 20; done"
ExecStop=/usr/bin/etcdctl rm /apps/devos/apis/core/backend/%i

#[Install]
#WantedBy=app@devos.target

[X-Fleet]
X-ConditionMachineOf=core-backend@%i.service
